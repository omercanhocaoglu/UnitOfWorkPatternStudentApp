@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UnitOfWorkPattern</title>
    <link href="~/vendor/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
	<link href="~/vendor/jquery/dist/jquery.js/jquery.min.js" rel="stylesheet" />
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<style>
    .min-height {
        min-height: 80vh;
    }
</style>
<body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <a class="navbar-brand" asp-action="Index">Student App</a>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Create">Create</a>
                    </li>
                    <li class="nav-item" style="cursor: pointer">
                        <a id="openModalBtn" class="nav-link">What is That</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container min-height">
        <div class="row justify-content-center">
            <div>
                <h5 class="display-5 text-center shadow p-3 mb-5 mt-1 bg-body-tertiary rounded">
                    Welcome to Student App
                </h5>
            </div>
            <div class="col-8">
                @RenderBody()
            </div>
        </div>
    </div>
    <div>
        <footer>
            <div class="card text-center">
                <div class="card-body">
                    <p>@DateTime.Now.Year - UnitOfWorkPattern</p>
                </div>
            </div>
        </footer>
    </div>
    <!-- Modal Yapısı -->
    <div class="modal fade" id="myModal" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalLabel">What is That?</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    This is a asp.net student app. You can add an student and a city about employee.
                    If you want, you can delete or update this student too
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    <script>
        $(document).ready(function() {
          $('#openModalBtn').click(function() {
            var myModal = new bootstrap.Modal(document.getElementById('myModal'));
            myModal.show();
          });
        });
    </script>
</body>
</html>